<!-- featured-articles.liquid -->
<div class="customstyle{{ section.id }} " data-aos="{{section.settings.animation}}" > 
  {%- include 'style-section' -%}
  <div class="{{ section.settings.setwidth }}">
    <div class="section-block">
      {%- include 'section-heading' -%}
      <div class="row">
        {%- assign blog = blogs[section.settings.blog] -%}
        {%- assign limit = section.settings.limit -%}
        {%- if blog != blank -%}
          {%- for article in blog.articles limit: limit  -%}
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12" data-aos="{{section.settings.animation}}" data-aos-duration="1000">
              {%- include 'blog-card' -%}
            </div>
          {%- endfor -%}
        {%- else -%}
          {%- for i in (1..limit) -%}
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12" data-aos="{{section.settings.animation}}" data-aos-duration="1000">
              {%- include 'blog-grid-blank' -%}
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

