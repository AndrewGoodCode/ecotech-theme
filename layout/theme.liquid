<!doctype html>
<html class="no-js " lang="{{ shop.locale }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_header_bg }}">
    {%- if settings.favicon != blank -%}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
    {%- endif -%}
    <link rel="canonical" href="{{ canonical_url }}">
    <title>
      {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
    </title>
    {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
    {%- endif -%}
    {%- include 'social-meta-tags' -%}
    {%- include 'header-css' -%}
    {{ content_for_header }}
  
  {% render 'shogun-head' %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Monserrat:wght@500&display=swap|Nunito+Sans">
    <style>
      .container {
          max-width: 90% !important;
      }
      h1, h2, h3, h4, h5, h6,
      .h1, .h2, .h3, .h4, .h5, .h6 {
        font-family: 'Montserrat', serif !important;
        font-weight: 500 !important;
      }
      p, a, pre, span, sup {
        font-family: 'Nunito Sans', san-serif !important;
        font-weight: 300 !important;
      }
      .btn {
        background-color: rgba(255, 255, 255, 0.3) !important;
      }
      .collection-card__meta {
        background-color: rgba(0, 0, 0, 0.2) !important;
      }
      .g-breadcrumb {
          padding: 30px 0px 30px 0px !important;
      }
      p {
        font-size: 16px !important;
        min-height: 16px !important;
        font-weight: 400 !important;
        line-height: 26px !important;
      }
      h2 {
        font-size: 24px !important;
        letter-spacing: .2em !important;
        text-transform: uppercase !important;
        margin-top: 1.5em !important;
        margin-bottom: 2em !important;
        /* font-weight: 700 !important; */
      }
      h3 {
        font-size: 12px !important;
        letter-spacing: .2em !important;
        text-transform: uppercase !important;
        margin-bottom: 1em !important;
      }
      h4 {
        font-size: 22px !important;
        letter-spacing: .2em !important;
        text-transform: uppercase !important;
      }
      h5 {
        font-size: 20px !important;
        letter-spacing: .2em !important;
        text-transform: uppercase !important;
      }
      .button {
        
      }
      .instagram .col {
        padding-left: 0 !important;
        padding-right: 0 !important;
      }
    </style>
</head>
  <body class="{{ settings.drawer_menu | append: 'header' }} template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }} body-theme {% if settings.productpage == 'product-2' or settings.productpage == 'product-6' or settings.productpage == 'product-7' %} product-hide-breadcrumb {% endif %}" >
    {%- section 'announcement-bar' -%}
    {%- include 'loading' -%}
    {%- include 'header' -%}
    <div class="page-container page-element is-moved-by-drawer">
      {%- include 'breadcrumb' -%}
      <main class="main-content" id="MainContent" role="main">
        {%- if settings.enable_animationscroll -%}<div id ="js-scroll">{% endif%}
          {%- if settings.enable_animationscroll -%}<div data-scroll-section>{% endif%}
        {%- include 'slideshow' -%}
        {%- if settings.enable_animationscroll -%}</div>{% endif%}
        {{ content_for_layout }}
        {%- if settings.enable_animationscroll -%}</div>{% endif%}
      </main>
      {%- include 'footer' -%}
      {%- include 'popup-newsletter' -%}
      {%- section 'product-suggest' -%}
      {%- section 'recently-viewed' -%}
    </div>
    {%- include 'cookie-policy' -%}
    {%- include 'back-to-top' -%}
    {%- include 'menu-mobile' -%}
    {%- include 'notify-popup' -%}
    {%- include 'bottom-contents' -%}
    {%- include 'quickview' -%}
    {%- include 'popup-compare' -%}
    {%- include 'header-js' -%}
    {%- if settings.show_multiple_currencies -%}
    {{ "/services/javascripts/currencies.js" | script_tag }}
    {%- endif -%}
  </body>
</html>